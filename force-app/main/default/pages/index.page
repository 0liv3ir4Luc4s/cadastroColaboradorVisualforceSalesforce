<apex:page docType="html-5.0" showHeader="false"  standardStylesheets="false" standardController="Colaborador__c">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"></link>
    <link rel="preconnect" href="https://fonts.googleapis.com"></link>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin=''></link>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet"></link> 
        <style>
            *, *::after, *::before {
                box-sizing: border-box;
            }
            body {
                height: 100vh;
            }
            .form-container {
                background-color: #f2f2f2;
                border-radius: 1.25rem;
                padding: 1.25rem 0 1.25rem 0;
            }
            #form-header {
                font-family: 'Poppins', sans-serif;
                font-weight: 700;
            }
            label {
                font-family: 'Poppins', sans-serif;
                font-size: .875rem;
            }
            .field {
                position: relative;
                overflow: hidden;
            }
            label::after {
                pointer-events: none;
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 100%;
                content: "";
                border-bottom: .0625rem solid #007aff;
                transform: translateX(-100%);
                transition: transform .3s ease;
            }
            input, ::placeholder {
                font-family: 'Roboto', sans-serif;
                font-size: 1.125rem;
            }
            input {
                width: 100%;
                outline: none;
                border: none;
                border-bottom: .0625rem solid #c8c8c8;
                background-color: transparent;
                padding-left: .5rem;
            }
            .field:hover label {
                color: #007aff;
            }
            .field:hover label::after{
                transform: translateX(0%);
            }
            input:focus {
                border-bottom-color: #007aff;
            }
            input:not(:focus) {
                border-bottom-color: #c8c8c8;
            }
            .i-valid {
                color: #34C759;
            }
            .i-invalid {
                color: #e74040;
            }
        </style>
        
        <div class="row w-100 h-100 align-items-center">
            <div class="col-7 p-0">
                <apex:image styleClass="img-fluid" value='{! $Resource.colaborador_svg }'/>
            </div>
            <div class="col-4 form-container">
                <h4 id='form-header' class="text-center">Cadastrar colaborador</h4>
                <div class="container-fluid">
                    <div class="row w-100 justify-content-center flex-wrap">
                        <div class="col-6 p-0">
                            <apex:form id='theForm'>
                               <div id='field-name' class="mb-2">
                                    <div class="field">
                                        <apex:outputLabel for='name' value='{! $ObjectType.Colaborador__c.Fields.Name.Label }'/>
                                        <apex:inputField id='name' value='{! Colaborador__c.Name }' html-placeholder='Nome do colaborador'/>
                                    </div>
                                    <div class="i-valid d-none">
                                        <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M4.75012 8.12738L1.62262 4.99988L0.557617 6.05738L4.75012 10.2499L13.7501 1.24988L12.6926 0.192383L4.75012 8.12738Z" fill="#34C759"/>
                                        </svg>
                                        <span>Válido</span>
                                    </div>
                                    <div class="i-invalid d-none">
                                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M15.1111 3.12064L13.6787 1.77778L8 7.10159L2.32127 1.77778L0.888885 3.12064L6.56762 8.44445L0.888885 13.7683L2.32127 15.1111L8 9.7873L13.6787 15.1111L15.1111 13.7683L9.43238 8.44445L15.1111 3.12064Z" fill="#E74040"/>
                                        </svg>
                                        <span>Inválido</span>
                                    </div>   
                                </div> 
                                <div id='field-cpf' class="mb-2">
                                   <div class="field">
                                        <apex:outputLabel for='name' value='{! $ObjectType.Colaborador__c.Fields.CPF__c.Label }'/>
                                        <apex:inputField id='cpf' styleClass="cpf" value='{! Colaborador__c.CPF__c }' html-placeholder='XXX.XXX.XXX-XX' onkeydown="cpfMask()"/>
                                    </div>
                                    <div class="i-valid d-none">
                                        <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M4.75012 8.12738L1.62262 4.99988L0.557617 6.05738L4.75012 10.2499L13.7501 1.24988L12.6926 0.192383L4.75012 8.12738Z" fill="#34C759"/>
                                        </svg>
                                        <span>Válido</span>
                                    </div>
                                    <div class="i-invalid d-none">
                                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M15.1111 3.12064L13.6787 1.77778L8 7.10159L2.32127 1.77778L0.888885 3.12064L6.56762 8.44445L0.888885 13.7683L2.32127 15.1111L8 9.7873L13.6787 15.1111L15.1111 13.7683L9.43238 8.44445L15.1111 3.12064Z" fill="#E74040"/>
                                        </svg>
                                        <span>Inválido</span>
                                    </div>   
                                </div>
                                <div id='field-cnpj' class="mb-2">
                                   <div class="field">
                                        <apex:outputLabel for='name' value='{! $ObjectType.Colaborador__c.Fields.CNPJ__c.Label }'/>
                                        <apex:inputField id='cnpj' styleClass="cnpj" value='{! Colaborador__c.CNPJ__c }' html-placeholder='XX.XXX.XXX/XXXX-XX' onkeydown="cnpjMask()"/>
                                    </div>
                                    <div class="i-valid d-none">
                                        <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M4.75012 8.12738L1.62262 4.99988L0.557617 6.05738L4.75012 10.2499L13.7501 1.24988L12.6926 0.192383L4.75012 8.12738Z" fill="#34C759"/>
                                        </svg>
                                        <span>Válido</span>
                                    </div>
                                    <div class="i-invalid d-none">
                                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M15.1111 3.12064L13.6787 1.77778L8 7.10159L2.32127 1.77778L0.888885 3.12064L6.56762 8.44445L0.888885 13.7683L2.32127 15.1111L8 9.7873L13.6787 15.1111L15.1111 13.7683L9.43238 8.44445L15.1111 3.12064Z" fill="#E74040"/>
                                        </svg>
                                        <span>Inválido</span>
                                    </div>   
                                </div>
                                <apex:commandButton id='submit' action="{! save }" value='cadastrar'/>
                            </apex:form>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>
        <script>
            let cpfMask = () => {
                    new Cleave('.cpf', {
                    delimiters: ['.', '.', '-'],
                    blocks: [3, 3, 3, 2]
                });
            }

            let cnpjMask = () => {
                new Cleave('.cnpj', {
                    delimiters: ['.', '.', '/', '-'],
                    blocks: [2, 3, 3, 4, 2]
                });
            }

            document.getElementById('{! $Component.theForm.submit }').onclick = (ev) => {
                document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.name }'].parentElement.parentElement.getElementsByClassName('i-valid')[0].classList.remove('d-none');

                if ( /\d{3}\.\d{3}\.\d{3}\-\d{2}/g.test(document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cpf }'].value) ) {
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cpf }'].parentElement.parentElement.getElementsByClassName('i-valid')[0].classList.remove('d-none');
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cpf }'].parentElement.parentElement.getElementsByClassName('i-invalid')[0].classList.add('d-none');
                } else {
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cpf }'].parentElement.parentElement.getElementsByClassName('i-valid')[0].classList.add('d-none');
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cpf }'].parentElement.parentElement.getElementsByClassName('i-invalid')[0].classList.remove('d-none');
                    ev.preventDefault();
                }

                if ( /[0-9]{2}\.?[0-9]{3}\.?[0-9]{3}\/?[0-9]{4}\-?[0-9]{2}/g.test(document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cnpj }'].value) ) {
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cnpj }'].parentElement.parentElement.getElementsByClassName('i-valid')[0].classList.remove('d-none');
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cnpj }'].parentElement.parentElement.getElementsByClassName('i-invalid')[0].classList.add('d-none');
                } else {
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cnpj }'].parentElement.parentElement.getElementsByClassName('i-valid')[0].classList.add('d-none');
                    document.getElementById('{! $Component.theForm }').elements['{! $Component.theForm.cnpj }'].parentElement.parentElement.getElementsByClassName('i-invalid')[0].classList.remove('d-none');
                    ev.preventDefault();
                }
            };
        </script>
</apex:page>