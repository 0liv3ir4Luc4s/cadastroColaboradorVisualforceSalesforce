<apex:page showHeader="false"  standardStylesheets="false" standardController="Colaborador__c">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"></link>
    <link rel="preconnect" href="https://fonts.googleapis.com"></link>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin=''></link>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet"></link> 
        <style>
            *, *::after, *::before {
                box-sizing: border-box;
            }
            body {
                height: 100vh;
            }
            .form-container {
                background-color: #f2f2f2;
                border-radius: 1.25rem;
                padding: 1.25rem 0 1.25rem 0;
            }
            #form-header {
                font-family: 'Poppins', sans-serif;
                font-weight: 700;
            }
            label {
                font-family: 'Poppins', sans-serif;
                font-size: .875rem;
            }
            .field {
                position: relative;
                overflow: hidden;
            }
            label::after {
                pointer-events: none;
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 100%;
                content: "";
                border-bottom: .0625rem solid #007aff;
                transform: translateX(-100%);
                transition: transform .3s ease;
            }
            input, ::placeholder {
                font-family: 'Roboto', sans-serif;
                font-size: 1.125rem;
            }
            input {
                width: 100%;
                outline: none;
                border: none;
                border-bottom: .0625rem solid #c8c8c8;
                background-color: transparent;
                padding-left: .5rem;
            }
            .field:hover label {
                color: #007aff;
            }
            .field:hover label::after{
                transform: translateX(0%);
            }
            input:focus {
                border-bottom-color: #007aff;
            }
            input:not(:focus) {
                border-bottom-color: #c8c8c8;
            }
        </style>
        <div class="row w-100 h-100 align-items-center">
            <div class="col-7 p-0">
                <apex:image styleClass="img-fluid" value='{! $Resource.colaborador_svg }'/>
            </div>
            <div class="col-4 form-container">
                <h4 id='form-header' class="text-center">Cadastrar colaborador</h4>
                <div class="container-fluid">
                    <div class="row w-100 justify-content-center flex-wrap">
                        <div class="col-6 p-0">
                            <apex:form>
                                <div class="field">
                                    <apex:outputLabel value='{! $ObjectType.Colaborador__c.Fields.Name.Label }'/>
                                    <apex:inputField value='{! Colaborador__c.Name }' html-placeholder='Nome do colaborador'/>
                                </div>
                            </apex:form>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
</apex:page>